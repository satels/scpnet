{
  "name": "scpnet",
  "version": "0.6.0",
  "description": "SCP Foundation Russia new platform",
  "scripts": {
    "build": "rm -rf dist && babel server -d dist --source-maps && cp -R server/public dist/public",
    "console": "node dist/console",
    "test": "eslint .",
    "prepublish": "npm run build",
    "start": "pm2 startOrRestart server/config/pm2/${NODE_ENV:-development}.config.js",
    "stop": "pm2 stop server/config/pm2/${NODE_ENV:-development}.config.js",
    "logs": "pm2 logs --raw | pino",
    "db": "knex --knexfile server/config/knexfile.js --cwd server",
    "deploy": "ssh $SCPNET_DEPLOY_SERVER \"cd $SCPNET_DEPLOY_PATH && yarn upgrade scpnet && cd node_modules/scpnet && ln -sf dist server && ln -sf ../../../env .env && npm run db migrate:latest && npm run start\"",
    "remote-console": "ssh $SCPNET_DEPLOY_SERVER \"cd $SCPNET_DEPLOY_PATH/node_modules/scpnet && npm run console\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resure/scpnet.git"
  },
  "author": "Gadzhi Gadzhiev <resure@zireael.org> (https://resure.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/resure/scpnet/issues"
  },
  "homepage": "https://scpfoundation.net",
  "files": [
    "dist",
    "yarn.lock"
  ],
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-zireael": "^3.2.0"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "bull": "^2.1.1",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-pino-logger": "^2.0.0",
    "knex": "^0.12.6",
    "node-schedule": "^1.2.0",
    "pg-monitor": "^0.7.1",
    "pg-promise": "^5.5.6",
    "pino": "^3.4.0",
    "raven": "^1.1.2",
    "serve-static": "^1.11.2",
    "toureiro": "^0.2.13",
    "wikidot-kit": "^0.5.0"
  },
  "babel": {
    "presets": [
      "stage-2",
      "es2015"
    ],
    "ignore": [
      "dist/**/*.js",
      "node_modules/**/*.js"
    ]
  }
}

{
  "name": "scpnet",
  "version": "0.18.2",
  "description": "SCP Foundation Russia new platform",
  "scripts": {
    "console": "node server/bin/console",
    "test": "eslint .",
    "db": "knex --knexfile server/config/knexfile.js --cwd server",
    "crontab:install": "crontab -u scpnet /var/scpnet/current/server/config/system/crontab",
    "systemd:install": "cp /var/scpnet/current/server/config/system/http.service /etc/systemd/system && cp /var/scpnet/current/server/config/system/worker.service /etc/systemd/system",
    "systemd:enable": "sudo systemctl enable scpnet-http scpnet-worker",
    "systemd:restart": "sudo systemctl restart scpnet-http scpnet-worker",
    "deploy:install": "npm run crontab:install && npm run systemd:install && npm run systemd:enable",
    "deploy": "ssh scpnet@${SCPNET_DEPLOY_SERVER:-node.scpfoundation.net} 'cd /var/scpnet && (yarn upgrade scpnet || yarn install) && yarn upgrade scpnet && npm run symlink && cd current && npm run db migrate:latest && npm run deploy:install && npm run systemd:restart'",
    "remote-console": "ssh scpnet@${SCPNET_DEPLOY_SERVER:-node.scpfoundation.net} 'cd /var/scpnet/current && npm run console'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resure/scpnet.git"
  },
  "author": "Gadzhi Gadzhiev <resure@zireael.org> (https://resure.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/resure/scpnet/issues"
  },
  "homepage": "https://scpfoundation.net",
  "files": [
    "server",
    "yarn.lock"
  ],
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-zireael": "^3.2.0"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "bull": "^2.1.1",
    "bull-ui": "^1.2.3",
    "cheerio": "^0.22.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-pino-logger": "^2.0.0",
    "knex": "^0.12.6",
    "pg-monitor": "^0.7.1",
    "pg-promise": "^5.5.6",
    "pino": "^3.4.0",
    "raven": "^1.1.2",
    "serve-static": "^1.11.2",
    "wikidot-ajax": "^1.1.0",
    "xmlrpc": "^1.3.2"
  }
}
